<%- contentFor('HeaderCss') %>
<%-include("../partials/title-meta",{"title": "Recover Password"}) %>

<%- contentFor('body') %>

<!--authentication-->
<div class="auth-basic-wrapper d-flex align-items-center justify-content-center">
  <div class="container my-5 my-lg-0">
     <div class="row">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5 col-xxl-4 mx-auto">
         <div class="card rounded-4 mb-0 border-top border-4 border-primary border-gradient-1">
           <div class="card-body p-5">
               <img src="assets/images/logo1.png" class="mb-4" width="145" alt="">
               <h4 class="fw-bold">Genrate New Password</h4>
               <p class="mb-0">We received your reset password request. Please enter your new password!</p>
              <div class="form-body mt-2">
                <div class="p-2">
                  <% if(error.length> 0) { %>
                  <div class="alert alert-borderless alert-danger p-2 text-center" role="alert">
                    <%= error %>
                  </div>
                  <% } %>
                  <% if(message.length> 0) { %>
                  <div class="alert alert-borderless alert-success p-2 text-center" role="alert">
                    <%= message %>
                  </div>
                  <% } %>
                  <form action="/sendforgotpasswordlink" method="post">
                    <div class="mb-4">
                      <label class="form-label">Email</label>
                      <input type="email" class="form-control"name="email" id="email" placeholder="Enter Email">
                    </div>

                    <div class="col-12">
                      <div class="d-grid">
                        <button type="submit" class="btn text-light btn-grd-primary">Login</button>
                      </div>
                    </div>
                  </form><!-- end form -->
                </div>
              </div>
          </div>

        </div>
      </div>
     </div>
  </div><!--end row-->
</div>
</div>
<!--authentication-->
<%- contentFor('FooterJs') %>